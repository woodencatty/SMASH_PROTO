extends layout

block content
  h1  준비운동(묵빠운동)
  h2  동작을 잘 보고 따라해주세요.
  h2  (2초씩 10회 반복)
  p#ViewTimer

  img(src= #{image}, width='426', height='1400' alt="muk-pa")
  img(src='/images/세부소스/버튼/홈-다운.png', width='152', height='113', onclick="location.href='/exercise'")
  
  script(type='text/javascript').
    var SetTime = #{count};
    function msg_time() {
    m = Math.floor(SetTime % 60);
    var msg =  m ;
    document.all.ViewTimer.innerHTML = msg;
    SetTime--;
    if (SetTime < 0) { clearInterval(tid); location.replace('/exercise_done'); }
    }
    window.onload = function TimerStart(){ tid=setInterval('msg_time()',1000) };
