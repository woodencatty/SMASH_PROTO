extends layout

block content
  h1  준비운동(묵빠운동)
  p#ViewTimer

  input#btnMain(name='btnMain', type='button', value='I wanna stop.', onclick="location.href='/main'")

  img(src='/images/move1.gif' width='426', height='1400' alt="muk-pa")

  script(type='text/javascript').
    var SetTime = 10;
    function msg_time() {
    m = Math.floor(SetTime % 60);
    var msg =  m ;
    document.all.ViewTimer.innerHTML = msg;
    SetTime--;
    if (SetTime < 0) { clearInterval(tid); location.replace(#{nextExercise}); }
    }
    window.onload = function TimerStart(){ tid=setInterval('msg_time()',1000) };
