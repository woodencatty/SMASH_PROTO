extends layout

block content
  h1  본 운동(팔 비대칭 올리기)
  p#ViewTimer

  input#btnMain(name='btnMain', type='button', value='I wanna stop.', onclick="location.href='/main'")

  img(src='/images/move2.gif' width='900', height='1046' alt="muk-pa")

  script(type='text/javascript').
    var SetTime = 10;
    function msg_time() {
    m = Math.floor(SetTime % 60);
    var msg =  m ;
    document.all.ViewTimer.innerHTML = msg;
    SetTime--;
    if (SetTime < 0) { clearInterval(tid); location.replace('/exercise3'); }
    }
    window.onload = function TimerStart(){ tid=setInterval('msg_time()',1000) };
